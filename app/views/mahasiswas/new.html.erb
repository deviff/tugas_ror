<div id='wrapper'>
<% if flash[:error] %>
  <p class="alert-error"><%= flash[:error] %></p>
<% end %>
<h3>Tambah Data Mahasiswa</h3>
<%= form_for :mahasiswa,:url => {:action => :create} do |form| %>
<div id='content'>
<table>
<tr>
	<td>NIM:</td>
	<td><%= form.text_field :nim, :size=>60 %></td>
</tr>
<tr>
	<td>Nama:</td>
	<td><%= form.text_field :nama, :size=>60 %></td>
</tr>
<tr>
	<td>Semester:</td>
	<td><%= form.text_field :semester, :size=>4 %></td>
</tr>
<tr>
	<td>Tingkat:</td>
	<td><%= form.text_field :ttingkat, :size=>4 %></td>
</tr>
<tr>
	<td>Email:</td>
	<td><%= form.text_field :email, :size=>60 %></td>
</tr>
<tr>
	<td>Phone:</td>
	<td><%= form.text_field :phone, :size=>60 %></td>
</tr>
<tr>
	<td valign="top">Alamat:</td>
	<td><%= form.text_area :alamat, :rows=>3, :cols=>15 %></td>
</tr>
<tr>
	<td>Tempat Lahir:</td>
	<td><%= form.text_field :tmptlahir, :size=>60 %></td>
</tr>
<tr>
	<td>Tanggal Lahir:</td>
	<td><%= form.text_field :tgllahir, :size=>30 %></td>
</tr>
<tr>
	<td colspan='2'>
		<%= submit_tag "Save" %>
	</td>
</tr>
</table>
</div>
<% end %>

<%= link_to '<<Back', mahasiswas_path %>
</div>